<Window x:Class="ReactiveWpfFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.codeplex.com"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <GroupBox
            Header="ReactiveUI" 
            Grid.Column="0"
            x:Name="inputContainer">
            <StackPanel>
                <StackPanel>
                    <Label Content="A" />
                    <Label Content="B" />
                    <Label Content="C" />
                    <Label Content="D" />
                    <Label Content="E" />
                    <Label Content="A" />
                    <Label Content="A" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox 
            Header="OxyPlot" 
            Grid.Column="1"
            x:Name="plotContainer">
            <oxy:PlotView Title="{Binding Title}">
                <oxy:PlotView.Series>
                    <oxy:LineSeries ItemsSource="{Binding Points}"/>
                </oxy:PlotView.Series>
            </oxy:PlotView>
        </GroupBox>
    </Grid>
</Window>
